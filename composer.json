{
    "name": "fof/impersonate",
    "description": "Login as other users of your forum",
    "keywords": [
        "extension",
        "flarum",
        "impersonate",
        "login"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        },
        {
            "name": "IanM",
            "email": "ian@blomstra.net",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/impersonate/issues",
        "source": "https://github.com/FriendsOfFlarum/impersonate",
        "forum": "https://discuss.flarum.org/d/9868"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^2.0.0-beta"
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Impersonate",
            "category": "feature",
            "icon": {
                "name": "fas fa-id-card",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/9868"
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "replace": {
        "flagrow/impersonate": "*"
    },
    "suggest": {
        "fof/moderator-notes": "Allows audit logging when users are impersonated"
    },
    "autoload": {
        "psr-4": {
            "FoF\\Impersonate\\": "src/"
        }
    },
    "require-dev": {
        "flarum/testing": "^2.0.0-beta.2",
        "flarum/phpstan": "^2.0.0-beta.2"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}